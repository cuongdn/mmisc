@using System.Web.UI.WebControls
@model IEnumerable<Cs.Business.Preview.StudentPreview>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form id="grid_filter">
    <label>
        Last Name:
        <input type="text" id="lastName" data-op="contains" data-field="lastName" />
    </label>

    <input type="button" value="Search" id="grid_search" />
</form>


@(Html.Kendo().Grid(Model).Name("grid")
    .Columns(c =>
    {
        c.Bound(x => x.LastName).Filterable(false);
        c.Bound(x => x.FirstMidName).Filterable(false);
        c.Bound(x => x.EnrollmentDate).Filterable(false);
    }).Pageable().Sortable().Filterable()
    .DataSource(x => x.Ajax()
        .PageSize(5)
        .Read(r => r.Action("Student_List", "Student")))

)

<script>
    $(document).ready(function () {
        $("#grid_search").click(function () {
            $("#grid").data("kendoGrid")
                .dataSource
                .filter({ field: "LastName", operator: "contains", value: $("#lastName").val() });
        });
    });
</script>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortBy = "LastName", sortOrder = ViewBag.SortOrder })
            @*@Html.DisplayNameFor(model => model.LastName)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </th>
        <th>
            @Html.ActionLink("Enrollment Date", "Index", new { sortBy = "EnrollmentDate", sortOrder = ViewBag.OtherSortOrder })

            @*@Html.DisplayNameFor(model => model.EnrollmentDate)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
